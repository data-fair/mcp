{
  "$id": "https://github.com/data-fair/simple-directory/api/config",
  "x-exports": [
    "types",
    "validate"
  ],
  "x-ajv": {
    "coerceTypes": "array"
  },
  "x-jstt": {
    "additionalProperties": false
  },
  "type": "object",
  "title": "Api config",
  "required": [
    "observer",
    "port",
    "transport"
  ],
  "properties": {
    "portalUrl": {
      "type": "string",
      "description": "Base URL of the Data Fair portal. If not set and transport=\"http\", the portal URL is inferred from the request origin. When transport=\"stdio\", you must set this value.",
      "example": "https://opendata.koumoul.com"
    },
    "observer": {
      "type": "object",
      "properties": {
        "active": {
          "type": "boolean"
        },
        "port": {
          "type": "number"
        }
      }
    },
    "port": {
      "type": "number"
    },
    "transport": {
      "type": "string",
      "enum": ["stdio", "http"]
    }
  }
}